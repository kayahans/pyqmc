plt.errorbar(x, y, yerr = df['error'])
plt.xlabel("Iteration")
plt.ylabel("Energy (Ha)")


res = plot_delta_ovlp("h2_vmc_cas_3_nelecas_1_1.hdf5", discard=15, annot=True)


plt.plot(res['raw'][0][:, 0,0])














